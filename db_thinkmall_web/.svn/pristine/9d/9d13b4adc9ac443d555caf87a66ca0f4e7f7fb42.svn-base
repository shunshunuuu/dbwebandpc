.share_page{
	width: 100%;
	height: 100%;
	background: #FFBA0A;
	position: absolute;
	left: 0;
	top: 0;
}
.share_it_box .share_logo{
	width: 1.28rem;
	height: 0.28rem;
	background: url(../images/share_logo.png) center no-repeat;
	background-size: 1.28rem 0.28rem;
	margin: 0.2rem auto;
}
.share_cen_box{
	padding: 0 0.43rem;
	background: #FFBA0A;
}
.share_cen_box h3{
	width: 100%;
	height: 0.3rem;
	border-top: 1px solid #f3da5e;
	margin-top: 0.48rem;
	margin-bottom: 0.05rem;
	position: relative;
}
.share_cen_box h3 span{
	display: block;
	width: 1.6rem;
	height: 0.3rem;
	font-size: 0.12rem;
	color: #020202;
	line-height: 0.3rem;
	background: #fff3d9;
	text-align: center;
	border-radius: 0.05rem;
	-webkit-border-radius: 0.05rem;
	-moz-border-radius: 0.05rem;
	position: absolute;
	left: 50%;
	top: -0.15rem;
	margin-left: -0.78rem;
}
.share_cen_box h3 span:before,
.share_cen_box h3 span:after{
	content: "";
	display: block;
	width: 0.08rem;
	height: 0.08rem;
	background: #fff3d9;
	border: 0.02rem solid #FFC731;
	border-radius: 100%;
	-webkit-border-radius: 100%;
	-moz-border-radius: 100%;
	position: absolute;
	top: 50%;
	margin-top: -0.06rem;
}
.share_cen_box h3 span:before{
	left: -0.06rem;
}
.share_cen_box h3 span:after{
	right: -0.06rem;
}
.share_cen_box .prize_box{
	width: 100%;
	height: 0.66rem;
	background: #fadd85 url(../images/prize_pic.png) center no-repeat;
	background-size: 1.52rem 0.66rem;
	margin-bottom: 0.18rem;
}

.share_cen_box .ui.button{
	height: 0.48rem;
	line-height: 0.48rem;
	background: #3979c1;
	font-size: 0.24rem;
	color: #fefdfb;
	text-align: center;
	font-weight: 600;
}
.share_it_box .share_txt_box{
	background: #FFBA0A;
	padding: 0.2rem 0.25rem;
}
.share_it_box .share_txt_box h4{
	font-size: 0.15rem;
	color: #000000;
	line-height: 0.2rem;
	text-align: center;
	margin-bottom: 0.05rem;
}
.share_it_box .share_txt_box h5,
.share_it_box .share_txt_box p{
	font-size: 0.12rem;
	color: #010101;
	line-height: 0.24rem;
	margin: 0;
}
.share_it_box .share_txt_box h5{
	text-align: center;
	margin-bottom: 0.05rem;
}
.share_it_box .share_txt_box .txt_con{
	padding-left: 0.1rem;
}

.share_tips_txt{
	width: 100%;
	position: absolute;
	left: 0;
	top: 0.9rem;
	z-index: 6000;
}
.share_tips_txt:before{
	content: "";
	width: 0.94rem;
	height: 0.68rem;
	background: url(../images/share_tips_jt.png) center no-repeat;
	background-size: 0.94rem 0.68rem;
	position: absolute;
	right: 0.22rem;
	top: -0.8rem;
}
.share_it_box .app_logo{
	width: 0.86rem;
	height: 0.86rem;
	background: url(../images/app_logo.png) center no-repeat;
	background-size: 0.86rem;
	margin: 0 auto 0.3rem;
}
.fill_number_box{
	padding: 0.15rem 0.2rem 0.25rem;
	background: #FFBA0A;
}
.fill_number_box .fill_number_list{
	background: #FFDE8A;
	padding: 0.2rem 0.4rem 0.12rem;
}
.fill_number_list .number_text input{
	display: block;
	width: 100%;
	height: 0.35rem;
	background: #FFFFFF;
	padding: 0.05rem 0;
	text-align: center;
	line-height: 0.25rem;
	border: none;
	outline: none;
	font-size: 0.2rem;
	color:#eba43f;
	margin-bottom: 0.18rem;
	font-weight: bold;
}
.fill_number_list .number_text input::-webkit-input-placeholder {
    color:#eba43f !important;
    font-size: 0.2rem;
    font-weight: bold;
    line-height: 0.25rem;
}
.fill_number_list .fill_btn{
	padding: 0 0.28rem;
}
.fill_number_list .fill_btn .ui.button{
	height: 0.36rem;
	line-height: 0.36rem;
	background: #3979c1;
	margin-bottom: 0.12rem;
	font-size: 0.2rem;
	color: #fefdfb;
	text-align: center;
	line-height: 0.36rem;
	border-radius: 0.08rem;
	-webkit-border-radius: 0.08rem;
	-moz-border-radius: 0.08rem;
}
.fill_number_list .fill_btn a.ui.button:last-of-type{
	margin-bottom: 0;
}
.share_it_box .share_step_list{
	background: #FFBA0A;
	padding-bottom: 0.3rem;
}
.share_it_box .share_step_list li{
	position: relative;
}
.share_step_list li .li_con{
	width: 0.82rem;
	height: 0.82rem;
	margin: 0 auto;
	border-radius: 100%;
	-webkit-border-radius: 100%;
	-moz-border-radius: 100%;
}
.share_it_box .share_step_list li:not(:last-of-type):after{
	content: "";
	width: 0.14rem;
	height: 0.28rem;
	background: url(../images/step_pic.png) center no-repeat;
	background-size: 0.14rem 0.28rem;
	position: absolute;
	top: 50%;
	right: -0.07rem;
	margin-top: -0.14rem;
}
.share_it_box .share_step_list li:nth-child(1) .li_con{
	background: #ec943e url(../images/share_step_p1.png) center no-repeat;
	background-size: 0.76rem;
}
.share_it_box .share_step_list li:nth-child(2) .li_con{
	background: #ec943e url(../images/share_step_p2.png) center no-repeat;
	background-size: 0.76rem;
}
.share_it_box .share_step_list li:nth-child(3) .li_con{
	background: #ec943e url(../images/share_step_p3.png) center no-repeat;
	background-size: 0.76rem;
}

